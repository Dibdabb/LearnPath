// Prisma schema for LearnPath
 datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

 generator client {
  provider = "prisma-client-js"
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  passwordHash  String
  xp            Int             @default(0)
  gems          Int             @default(0)
  streak        Int             @default(0)
  lastLessonAt  DateTime?
  refreshToken  String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  profile       Profile?
  progress      Progress[]
  inventory     Inventory[]
  boosts        Boost[]
  questProgress QuestProgress[]
  weeklyXp      WeeklyXp?
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String
  avatarUrl   String?
  user        User     @relation(fields: [userId], references: [id])
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  xpEarned    Int
  gemsEarned  Int      @default(0)
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Inventory {
  id        String @id @default(cuid())
  userId    String
  itemId    String
  quantity  Int    @default(0)
  user      User   @relation(fields: [userId], references: [id])

  @@unique([userId, itemId])
}

model Boost {
  id          String   @id @default(cuid())
  userId      String
  itemId      String
  multiplier  Float
  expiresAt   DateTime
  activatedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Quest {
  id          String          @id @default(cuid())
  code        String          @unique
  title       String
  description String
  target      Int
  rewardXp    Int
  rewardGems  Int
  active      Boolean         @default(true)
  questType   String
  progress    QuestProgress[]
}

model QuestProgress {
  id         String   @id @default(cuid())
  userId     String
  questId    String
  progress   Int      @default(0)
  completed  Boolean  @default(false)
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  quest      Quest    @relation(fields: [questId], references: [id])

  @@unique([userId, questId])
}

model WeeklyXp {
  id        String   @id @default(cuid())
  userId    String   @unique
  weekStart DateTime
  xp        Int      @default(0)
  user      User     @relation(fields: [userId], references: [id])
}
